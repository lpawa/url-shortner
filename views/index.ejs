                }
                else {
                    console.log("Invalid url");
                    showError("Invalid URL- Enter correct format");
                    setTimeout(hideError, 2000);
                }
            }
        }




    }

    function post(arr) {
        if(arr.length>0){
            if(arr.length==1) {
                $.post("/shorten",
                    {
                        urls: JSON.stringify(arr)
                    },
                    function (data, status) {
                        location.replace(redirectUrl);
                        alert("Data: " + data + "\nStatus: " + status);
                    });
            }
            else{
                $.post("/shortenMul",
                    {
                        urls: JSON.stringify(arr)
                    },
                    function (data, status) {
                        location.replace(redirectUrl);
                        alert("Data: " + data + "\nStatus: " + status);
                    });

            }
        }
        location.replace(redirectUrl);
    }

</script>
